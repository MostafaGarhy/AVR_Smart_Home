#ifndef CLCD_2X16_PRIVATE_H_
#define CLCD_2X16_PRIVATE_H_

/*	       LCD Commands Macros     	 */
#define FUNC_SET_5X8_4BIT_MODE    0x38
#define Disp_ON_OFF   	          0x0F
#define Disp_CLR      	          0x01
#define CURSOR_OFF 		          0x0C
#define CURSOR_ON 		          0x0E
/*************************************/

#define CURS_ON			          1
#define CURS_OFF		          0

#endif /* CLCD_2X16_PRIVATE_H_ */
